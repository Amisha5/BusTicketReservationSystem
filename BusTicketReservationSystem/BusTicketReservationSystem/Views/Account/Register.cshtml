@model BusTicketReservationSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<style>
    /*html {
        backdrop-filter: blur(5px);
    }*/

    input, textarea {
        border-radius: 5px;
    }

    .align {
        margin-top: 8em;
        margin-left: 250px;
    }

    #Form {
        padding-top: 50px;
    }

    h1 {
        font-weight: bold;
    }

    body {
        background-image: url("https://images.unsplash.com/photo-1465401683404-bde9091abe83?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=720&q=80");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        backdrop-filter: blur(2px);
        color: whitesmoke;
        object-fit: cover;
        overflow: hidden;
    }

    input {
        opacity: 0.8;
    }

    .form-group {
        font-weight: bold;
    }

    #loginForm {
        width: 900px;
    }

    span {
        margin-left: -175px;
    }
</style>

<body>
    <div class="container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            
            <br />
            <br />
            <br />
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-white" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }
    </div>
    <br />
    <br /><br /><br /><br /><br /><br /><br /><br />
    <br /><br /><br /><br /><br /><br /><br /><br />
    
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>

