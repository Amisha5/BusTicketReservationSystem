@model IEnumerable<BusTicketReservationSystem.DomainModel.Models.BookedSeat>
@{
    ViewBag.Title = "Index";
}

<h2>BookingHistory</h2>
<style>
    .table th {
        background-color: #77b9fa;
    }
    .table td
    {
        background-color:white;
    }
    .backgraoundDesignHistory {
        font-family: Arial, Helvetica, sans-serif;
        margin-top: 50px;
        background: url("../../images/volvo-9800-dd-double-decker-passenger-big-bus-travel-by-bus-new-buses.jpg");
        background-repeat: no-repeat;
        object-fit: cover;
        background-size: cover;
        /*
                backdrop-filter: blur(3px);*/
    }
  


    .textWhiteh3 {
        color: black;
        font-size: 20px;
        font-weight: bold;
    }
</style>
<body class="container bodyAlign backgraoundDesignHistory">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BusDetail.Route.FromLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusDetail.Route.ToLocation)
            </th>
            <th>@Html.DisplayNameFor(model => model.BusDetail.BusName)</th>
            <th>
                @Html.DisplayNameFor(model => model.BusDetail.Trip.JourneyDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BusDetail.Route.FromLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusDetail.Route.ToLocation)
                </td>
                <td>@Html.DisplayFor(modelItem => item.BusDetail.BusName)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusDetail.Trip.JourneyDate)
                </td>
                <td>
                    <a href="~/User/Cancel/@item.SeatId" class="btn btn-info">Cancel</a>
                </td>
            </tr>
        }
    </table>


</body>